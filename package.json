{
  "name": "epitech-vs-coding-style",
  "displayName": "Epitech VS Coding Style",
  "description": "Real-time coding style checker for Epitech students. Helps students maintain consistent code quality and follow Epitech standards.",
  "icon": "resources/icon.png",
  "version": "0.0.1",
  "publisher": "maty-millien",
  "license": "MIT",
  "author": {
    "name": "Maty MILLIEN",
    "url": "https://github.com/maty-mlln"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maty-mlln/epitech-vs-coding-style"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Linters",
    "Formatters",
    "Programming Languages",
    "Education"
  ],
  "keywords": [
    "epitech",
    "coding-style",
    "c",
    "cpp",
    "formatter"
  ],
  "activationEvents": [
    "onLanguage:c",
    "onLanguage:makefile",
    "onLanguage:cpp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [],
    "configuration": {}
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "install": "npm install && npm run compile && vsce package && code --install-extension *.vsix"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  }
}
